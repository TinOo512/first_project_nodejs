<% var title = 'Farm2War | Signin' %>
<% var css = 'users' %>
<% include ./../layouts/header %>

<div class="container">	
	<form class="form-signin" method="POST" action="/signin" >
        <h2 class="form-signin-heading">Please sign in</h2>
        <% if(typeof(error) != 'undefined') { %>
			<div class="alert alert-error">
				<button class="close" data-dismiss="alert" type="button">×</button>
				<%= error %>
			</div>
		<% } else if (typeof(success) != 'undefined') { %>
			<div class="alert alert-success">
				<button class="close" data-dismiss="alert" type="button">×</button>
				<%= success %>
			</div>
		<% } %>
        <input name="username" type="text" class="input-block-level" placeholder="Username">
        <% if(typeof(errors) != 'undefined' && typeof(errors['username']) != 'undefined') { %>
        	<div class="alert alert-error">
			<button class="close" data-dismiss="alert" type="button">×</button>
			<ul>
			<% for (var i in errors['username']) { %>
		      <li><%= errors['username'][i] %></li>
		    <% } %>
		    </ul>
		    </div>
	    <% } %>
        <input name="email" type="text" class="input-block-level" placeholder="Email address">
        <% if(typeof(errors) != 'undefined' && typeof(errors['email']) != 'undefined') { %>
        	<div class="alert alert-error">
			<button class="close" data-dismiss="alert" type="button">×</button>
			<ul>
			<% for (var i in errors['email']) { %>
		      <li><%= errors['email'][i] %></li>
		    <% } %>
		    </ul>
		    </div>
	    <% } %>
        <input name="password1" type="password" class="input-block-level" placeholder="Password">
        <% if(typeof(errors) != 'undefined' && typeof(errors['password']) != 'undefined') { %>
        	<div class="alert alert-error">
			<button class="close" data-dismiss="alert" type="button">×</button>
			<ul>
			<% for (var i in errors['password']) { %>
		      <li><%= errors['password'][i] %></li>
		    <% } %>
		    </ul>
		    </div>
	    <% } %>
        <input name="password2" type="password" class="input-block-level" placeholder="Password confirmation">
        <!-- <label class="checkbox">
          <input type="checkbox" value="remember-me"> Remember me
        </label> -->
        <button class="btn btn-large btn-primary" type="submit">Sign in</button>
      </form>
</div>

<% include ./../layouts/scripts %>

</body>
</html>